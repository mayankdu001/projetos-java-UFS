package Supermercado;

public class Funcionario extends Pessoa {

	private double salario;
	private String turno;
	private String cargo;

	public Funcionario(int matricula, String nome, int idade, char sexo,int cpf, int telefone, String endereco, double salario,String turno, String cargo) {

		super(matricula, nome, idade, sexo, cpf, telefone, endereco);
		this.salario = salario;
		this.turno = turno;
		this.cargo = cargo;

	}

	public Funcionario() {
		super();
		this.salario = 0;
		this.turno = null;
		this.cargo = null;
	}
	
	public void setSalario(double salario){
		this.salario = salario;
	}
	
	public double getSalario(){
		return salario;
	}
	
	public void setTurno( String turno){
		this.turno = turno;
	}
	
	public String getTurno (){
		return turno;
	}
	
	public void setCargo(String cargo){
		this.cargo = cargo;
	}
	
	public String getCargo() {
		return cargo;
	}
	public double decimo(){
		double decimo = salario*2;
		return decimo;
	}
	
	public double ferias(){
	
	
		double ferias = (salario/3)+salario;
		return ferias;
	}
	
	
	public double bonusTurno(double taxa){
		double bonus = 0 ;
		
		if(getTurno().equals("noite")){
			
		bonus = salario+(taxa/100);	
			
		}
		
		return bonus;
	}
	
public double rendimentoAnual(double taxa){
	
	double total = (salario*12) + (decimo()+ferias());
	if(turno.equals("noite")){
		total += bonusTurno(taxa);
	}
	
	return total;		
	
	
}

}
