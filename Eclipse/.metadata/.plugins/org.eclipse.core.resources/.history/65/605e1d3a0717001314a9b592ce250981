package Janela;

import javax.swing.*;

public class Janela {

	public static void main(String[] args) {
		int i = 0;
		JFrame frame = new JFrame("aplicacao java");
		JButton but = new JButton("clic");
		JLabel texto=null;
		for (int j = 0; j < 10; j++) {
			texto = new JLabel("quantidade de clics: " + j);
		}

		JPanel panel = new JPanel();

		frame.add(panel);
		panel.add(but);

		panel.add(texto);

		frame.setVisible(true);

	}

}
