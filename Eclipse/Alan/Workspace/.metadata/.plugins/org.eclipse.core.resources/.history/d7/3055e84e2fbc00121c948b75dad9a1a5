package projeto_lanchonete;

import javax.swing.JOptionPane;

public class lanchonete {

	public static void main(String[] args) {

		Menu_opcao_produto menuproduto = new Menu_opcao_produto();

		int opcao = Integer.parseInt(JOptionPane.showInputDialog("1 - cadastrar \n"+ 
																 "2 - alterar  \n" + 
																 "3 - excluir \n "+ 
																 "4 - consultar \n " + 
																 "5 - sair ", "informe a opção"));
		do {

			switch (opcao) {
			case 1:
				menuproduto.cadastrar();

				break;

			case 2:
				menuproduto.alterar();

				break;

			case 3:
				menuproduto.excluir();

				break;

			case 4:
				menuproduto.consultar();

				break;

			case 5:
				JOptionPane.showMessageDialog(null, "programa finalizado");

				break;

			default:
				JOptionPane.showMessageDialog(null, "opcao invalida");
				break;

			}
		} while (opcao != 5);

	}

}
